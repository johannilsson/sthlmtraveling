<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:visibility="visible">

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp"
            >
            <ImageView
                android:id="@+id/trip_message_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_warning_black_24dp"
                android:tint="@color/deviation"
                android:layout_gravity="start" />
        </LinearLayout>

        <FrameLayout
            android:paddingLeft="12dp"
            android:paddingStart="12dp"
            android:paddingRight="8dp"
            android:paddingEnd="8dp"
            android:layout_width="36dp"
            android:layout_height="fill_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/line_segment_walk"
                android:layout_gravity="center_vertical|center_horizontal" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/trip_messages"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:paddingLeft="4dp"
        android:paddingStart="4dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        >
        <!-- EVENT TO INFLATE -->
        <TextView
            android:id="@+id/trip_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dip"
            android:layout_marginEnd="12dip"
            android:textColor="@color/deviation"
            android:textIsSelectable="true"
            tools:text="På grund av banarbeten stannar inte södergående pendeltåg vid station Årstaberg lördag 12 juni kl 09:18 – 18:40."
             />
    </LinearLayout>
</LinearLayout>
