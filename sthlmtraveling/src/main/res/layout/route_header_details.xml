<RelativeLayout
    android:id="@+id/header_details"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="24dp"
    android:paddingLeft="@dimen/list_horizontal_padding"
    android:paddingRight="@dimen/list_horizontal_padding"
    android:paddingTop="32dp"
    android:visibility="visible">

    <LinearLayout
        android:id="@+id/route_buy_ticket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible"
        android:minHeight="54dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_gravity="center|end"
            android:background="@drawable/zone_buy_ticket_background"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:singleLine="true"
            android:text="@string/sms_ticket_label"
            android:textColor="@color/fare_text"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/route_zones"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_gravity="center|end"
            android:background="@drawable/zone_background"
            android:gravity="center_vertical"
            android:paddingLeft="8dip"
            android:paddingRight="8dip"
            android:singleLine="true"
            android:textColor="@color/fare_text"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="AB"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/route_date_time"
        style="@style/Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="start"
        android:layout_toLeftOf="@id/route_buy_ticket"
        android:layout_toStartOf="@id/route_buy_ticket"
        tools:text="Time to staj ksdjsk djskd js jdksj dk jsk"
        />


    <ImageButton
        android:id="@+id/share_trip_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:paddingLeft="12dp"
        android:paddingStart="12dp"
        android:paddingRight="6dp"
        android:paddingEnd="6dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:padding="@dimen/list_horizontal_padding"
        android:src="@drawable/ic_share_black_24dp"
        />
</RelativeLayout>
