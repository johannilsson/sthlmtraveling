<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:gravity="center"
        android:top="4dp"
        >
        <rotate
            android:fromDegrees="90">
            <shape
                android:shape="line"
                >
                <stroke
                    android:width="2dp"
                    android:color="@color/icon_default"
                    android:dashGap="4dp"
                    android:dashWidth="2dp" />
            </shape>
        </rotate>
    </item>

</layer-list>

