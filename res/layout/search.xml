<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <LinearLayout 
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#999999"
            android:paddingTop="10dip"
            >
    		<LinearLayout 
    	        android:layout_width="fill_parent"
    	        android:layout_height="wrap_content"
    	        android:addStatesFromChildren="true"
    	        android:gravity="center_vertical"
    	        android:paddingRight="0dip"
    		    >
	            <!-- Empty dummy to prevent AutoCompleteTextView from receiving focus -->
	            <LinearLayout
	                android:focusable="true" android:focusableInTouchMode="true"
	                android:layout_width="0px" android:layout_height="0px"
	            />
    		    <AutoCompleteTextView 
    		    	android:id="@+id/from"
    				android:hint="@string/from"
    				android:dropDownWidth="fill_parent"
    				android:layout_width="wrap_content"
               		android:layout_height="wrap_content"
               		android:singleLine="true"
               		android:layout_weight="1"
                    android:imeOptions="actionDone"
                    android:nextFocusRight="@+id/from_menu"
    				/>
    			<ImageButton
    					android:id="@+id/from_menu"
    					android:src="@android:drawable/ic_input_get"
    					android:layout_width="wrap_content"
    					android:layout_height="wrap_content"
    					android:layout_marginTop="2dip"
    					android:layout_marginRight="2dip"
    					android:layout_marginBottom="2dip"
    					android:padding="5dip"
    				/>
        	</LinearLayout>
		    <!-- Empty dummy to prevent AutoCompleteTextView from receiving focus -->
		    <LinearLayout
		        android:focusable="true" android:focusableInTouchMode="true"
		        android:layout_width="0px" android:layout_height="0px"
		    />
    		<LinearLayout 
    		    android:gravity="center_vertical"
    		    android:layout_width="fill_parent" 
    		    android:layout_height="wrap_content">
    		    <AutoCompleteTextView 
    		    	android:id="@+id/to"
    				android:hint="@string/to"
    				android:dropDownWidth="fill_parent"
    				android:layout_width="wrap_content"
    				android:layout_height="wrap_content"
    				android:singleLine="true"
    				android:layout_weight="1"
                    android:imeOptions="actionDone"
    				/>
    				<ImageButton
    					android:id="@+id/to_menu"
    					android:src="@android:drawable/ic_input_get"
    					android:layout_width="wrap_content"
    					android:layout_height="wrap_content"
    					android:layout_marginTop="2dip"
    					android:layout_marginRight="2dip"
    					android:layout_marginBottom="2dip"
    					android:padding="5dip"
    				/>
    		</LinearLayout>
            <RadioGroup
                android:id="@+id/planner_choose_time_group"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:checkedButton="@+id/planner_check_now">
		            <RadioButton
		                android:id="@+id/planner_check_now"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
		                android:text="Now" />
                    <RadioButton
                        android:id="@+id/planner_check_later"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:text="Later"
                    />
            </RadioGroup>
            
            <TableLayout
                android:id="@+id/planner_change_time_layout"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:visibility="gone"
                >
                <TableRow>
	                <Spinner 
	                    android:id="@+id/departure_arrival_choice"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:drawSelectorOnTop="true"
	                />
                </TableRow>
                <TableRow>
	                <Button
	                    android:id="@+id/planner_route_time"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    />
	                <Button
	                    android:id="@+id/planner_route_date"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    />
                </TableRow>
            </TableLayout>
            <!-- 
            <LinearLayout
                android:id="@+id/planner_change_time_layout"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                >
                <Spinner 
                    android:id="@+id/departure_arrival_choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawSelectorOnTop="true"
                />
                <Button
					android:id="@+id/planner_route_time"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
                    />
                <Button
					android:id="@+id/planner_route_date"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					/>
            </LinearLayout>
             -->
            <Button
                android:layout_marginTop="5dip"
				android:id="@+id/search_route"
				android:text="@string/search_label"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
